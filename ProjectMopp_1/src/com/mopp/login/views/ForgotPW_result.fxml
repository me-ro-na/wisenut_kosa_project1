<AnchorPane fx:id="searchResultPane" prefHeight="750.0"
	prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.mopp.login.controllers.ForgotPWResultController"
	styleClass="mint-bg" stylesheets="@../css/Stylesheet.css">
	<children>
		<Label layoutX="340" layoutY="81.0" text="MOPP"
			textFill="#1a1a1b">
			<font>
				<Font size="36.0" />
			</font>
		</Label>
		<Text layoutX="109.0" layoutY="249.0" strokeType="OUTSIDE"
			strokeWidth="0.0" text="Insert New Password!"
			wrappingWidth="281.36328125">
			<font>
				<Font name="Hancom Gothic Bold" size="25.0" />
			</font>
		</Text>
		<Text layoutX="146.0" layoutY="284.0" strokeType="OUTSIDE"
			strokeWidth="0.0"
			text="Selcet your new  PASSWORD and enter it below."
			wrappingWidth="508.36328125">
			<font>
				<Font name="Hancom Gothic Regular" size="20.0" />
			</font>
		</Text>
		<Label layoutX="173.0" layoutY="389.0" prefHeight="21.0"
			prefWidth="147.0" text="NEW PASSWORD">
			<font>
				<Font size="18.0" />
			</font>
		</Label>
		<Label layoutX="173.0" layoutY="446.0" prefHeight="21.0"
			prefWidth="288.0" text="CONFIRM PASSWORD">
			<font>
				<Font size="18.0" />
			</font>
		</Label>
		<PasswordField fx:id="password" layoutX="392.0"
			layoutY="385.0" prefHeight="23.0" prefWidth="206.0"
			promptText="Password">
			<font>
				<Font name="Arial" size="14.0" />
			</font>
			<effect>
				<DropShadow blurType="ONE_PASS_BOX" color="#c6c0c0"
					height="14.83" radius="8.4575" />
			</effect>
		</PasswordField>
		<PasswordField fx:id="confirm" layoutX="392.0"
			layoutY="442.0" prefHeight="23.0" prefWidth="206.0"
			promptText="Confirm">
			<font>
				<Font name="Arial" size="14.0" />
			</font>
			<effect>
				<DropShadow blurType="ONE_PASS_BOX" color="#c6c0c0"
					height="14.83" radius="8.4575" />
			</effect>
		</PasswordField>
		
		<Hyperlink fx:id="previous" layoutX="300.0" layoutY="542.0"
			onAction="#back" prefHeight="29.0" text="Previous" textFill="#1b1a1a">
			<font>
				<Font size="18.0" />
			</font>
		</Hyperlink>
		<Hyperlink fx:id="Reset" alignment="CENTER" layoutX="400.0" layoutY="542.0"
			onAction="#resetPw" prefHeight="29.0"
			textFill="#1b1a1a" text="RESET YOUR PASSWORD!">
			<font>
				<Font size="18.0" />
			</font>
		</Hyperlink>
	</children>
</AnchorPane>
